{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Northern European Language Speakers in Australia (2021)",
    "width": 800,
    "height": 400,
    "projection": {"type": "mercator"},
    "data": {
      "url": "https://raw.githubusercontent.com/mkee0011/3179/main/Homework%20Week%209/js/STE_2021_AUST_GDA94.topojson",
      "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA94"}
    },
    "transform": [
      {
        "lookup": "properties.STE_NAME21",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/mkee0011/3179/main/Homework%20Week%209/data/language_spoken_at_home.csv"
          },
          "key": "State",
          "fields": ["NorthernEuropeanLanguages"]
        }
      },
      {"calculate": "datum.NorthernEuropeanLanguages/datum.Population * 10000", "as": "Number per 10,000 population"}
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "Number per 10,000 population",
        "type": "quantitative",
        "scale": {
            "type": "threshold",
            "domain": [6000,7000,8000],
            "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
        }
      },
      "tooltip": [
        {"field": "properties.STE_NAME21", "type": "nominal", "title": "State"},
        {"field": "Number per 10,000 population", "type": "quantitative"}
      ]
    }
  }