{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Proportion of English Speakers in Australia (2021)",
    "width": 800,
    "height": 400,
    "projection": {"type": "mercator"},
    "data": {
      "url": "https://raw.githubusercontent.com/mkee0011/3179/main/Homework_Week_9/js/STE_2021_AUST_GDA94.topojson",
      "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA94"}
    },
    "transform": [
        {
            "lookup": "properties.STE_NAME21",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/mkee0011/3179/main/data_vis_2/data/eng_prof_by_state.csv"
                },
                "key": "state",
                "fields": ["speak_eng_only","state_pop"]
            }
        },
        {"calculate": "datum.speak_eng_only/datum.state_pop * 100", "as": "prop_of_state"}
    ],
    "mark": {"type": "geoshape","stroke":"white"},
    "encoding": {
        "color": {
            "field": "prop_of_state",
            "type": "quantitative",
            "scale": {
                "type": "threshold",
                "domain": [55,70,85],
                "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
            },
            "legend":{"title":"% of State"}
        },
        "tooltip": [
        {"field": "properties.STE_NAME21", "type": "nominal", "title": "State"},
        {"field": "prop_of_state", "type": "quantitative", "format":".1f","title":"Proportion of State Population"}
        ]
    }
}