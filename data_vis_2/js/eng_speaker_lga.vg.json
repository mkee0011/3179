{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Proportion of English Speakers in Australia (2021)",
    "width": "container",
    "height": 600,
    "projection": {"type": "mercator"},
    "data": {
      "url": "https://raw.githubusercontent.com/mkee0011/3179/main/data_vis_2/js/Local_Government_Area-2.json",
      "format": {"type": "topojson", "feature": "Local_Government_Area"}
    },
    "transform": [
        {
            "lookup": "properties.abb_name",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/mkee0011/3179/main/data_vis_2/data/english_lanp_by_lga.csv"
                },
                "key": "LGA",
                "fields": ["English","pop"]
            }
        },
        {"calculate": "datum.English/datum.pop * 100", "as": "prop_of_state"}
    ],
    "mark": {"type": "geoshape","stroke":"white"},
    "encoding": {
        "color": {
            "field": "prop_of_state",
            "type": "quantitative",
            "scale": {
                "type": "threshold",
                "domain": [55,70,85],
                "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
            },
            "legend":{"title":"% of State"}
        },
        "tooltip": [
        {"field": "properties.lga_name", "type": "nominal", "title": "State"},
        {"field": "prop_of_state", "type": "quantitative", "format":".1f","title":"Proportion of State Population"}
        ]
    }
}