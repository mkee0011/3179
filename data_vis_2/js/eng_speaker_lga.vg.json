{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Northern European Language Speakers in Australia (2021)",
    "width": 800,
    "height": 400,
    "projection": {"type": "mercator"},
    "data": {
      "url": "https://raw.githubusercontent.com/mkee0011/3179/main/data_vis_2/js/Local_Government_Area.topojson",
      "format": {"type": "topojson", "feature": "lga_aus"}
    },
    "transform": [
        {
            "lookup": "properties.lga_name",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/mkee0011/3179/main/dara_vis_2/data/eng_lanp_by_lga.csv"
                },
                "key": "LGA",
                "fields": ["English", "pop"]
            }
        },
        {"calculate": "datum.English/datum.pop * 100", "as": "prop_of_state"}
    ],
    "mark": {"type": "geoshape","stroke":"white"},
    "encoding": {
        "color": {
            "field": "prop_of_state",
            "type": "quantitative",
            "scale": {
                "type": "threshold",
                "domain": [6000,7000,8000],
                "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
            },
            "legend":{"title":"Speakers per 10,000"}
        },
      "tooltip": [
        {"field": "properties.STE_NAME21", "type": "nominal", "title": "State"},
        {"field": "Numberper10000", "type": "quantitative", "format":".0f","title":"Speakers per 10,000"}
        ]
    }
}