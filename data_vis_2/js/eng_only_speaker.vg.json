{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height":450,
    "width":600,
    "background":"white",
    "title": "English Only Speakers in Australia (2021)",
    "projection": {"type": "mercator"},
    "data": {
      "url": "https://raw.githubusercontent.com/mkee0011/3179/main/Homework_Week_9/js/STE_2021_AUST_GDA94.topojson",
      "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA94"}
    },
    "transform": [
        {
            "lookup": "properties.STE_NAME21",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/mkee0011/3179/main/data_vis_2/data/eng_only_by_state.csv"
                },
                "key": "state",
                "fields": ["speaks_english_only", "population"]
            }
        },
        {"calculate": "datum.speaks_english_only/datum.population * 100", "as": "prop_of_pop"}
    ],
    "mark": {"type": "geoshape","stroke":"white"},
    "encoding": {
        "color": {
            "field": "prop_of_pop",
            "type": "quantitative",
            "scale": {
                "type": "threshold",
                "domain": [25,50,75],
                "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
            },
            "legend":{"title":"Proportion of Population"}
        },
      "tooltip": [
        {"field": "properties.STE_NAME21", "type": "nominal", "title": "State"},
        {"field": "prop_of_pop", "type": "quantitative", "format":".0f","title":"% of Population"}
        ]
    }
}