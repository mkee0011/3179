{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height":500,
    "width":600,
    "background":"white",
    "title": "English Only Speakers in Australia (2021)",
    "params": [
        {
            "name": "zoom_level",
            "value": 30000,
            "bind": {
                "input": "range",
                "min": 3500,
                "max": 60000,
                "step": 100,
                "name": "Zoom: "
            }
        },
        {
            "name": "center_to",
            "value": [-25.9, 134.3],
            "bind": {
                "input": "select",
                "options": [
                    [-25.9, 134.3],
                    [-25.9, 134.3],
                    [-25.9, 134.3],
                    [-25.9, 134.3],
                    [145, -37.95],
                    [144.3, -38.1],
                    [144.9, -36.7],
                    [147.1, -38.1]
                ],
                "labels": [
                    "All States",
                    "Australian Capital Territory",
                    "New South Wales",
                    "Northern Territory",
                    "South Australia",
                    "Tasmania",
                    "Queensland",
                    "Western Australia",
                    "Victoria"
                ],
                "name": "Map Centre: "
            }
        }
    ],
    "projection": {
        "type": "equirectangular",
        "center": { "expr": "center_to" },
        "scale": { "expr": "zoom_level" }
    },
    "data": {
      "url": "https://raw.githubusercontent.com/mkee0011/3179/main/data_vis_2_final/js/LGA_Boundaries.topojson",
      "format": {"type": "topojson", "feature": "LGA_2021_AUST_GDA2020"}
    },
    "layer":[
        {
        "data": {
            "url": "https://raw.githubusercontent.com/mkee0011/3179/refs/heads/main/data_vis_2_final/js/state_boundaries.topojson",
            "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA94"}
            },
            "mark":{"type":"geoshape","fill":"none","stroke":"black"}
        },
        {
        "data": {
            "url": "https://raw.githubusercontent.com/mkee0011/3179/main/data_vis_2_final/js/ne_10m_ocean.topojson",
            "format": {"type": "topojson", "feature": "ne_10m_ocean"}
        },
        "mark": {"type": "geoshape", "fill": "skyblue"}
        },
        {
            "transform": [
                {
                    "lookup": "properties.LGA_NAME21",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/mkee0011/3179/main/data_vis_2_final/data/speak_eng_only_by_lga.csv"
                        },
                        "key": "LGA",
                        "fields": ["speaks_english_only", "pop"]
                    }
                },
                {"calculate": "datum.speaks_english_only/datum.pop * 100", "as": "prop_of_pop"}
            ],
            "mark": {"type": "geoshape","stroke":"lightgray"},
            "encoding": {
                "color": {
                    "field": "prop_of_pop",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [50,60,70],
                        "range": ["#edf8fb", "#b2e2e2", "#66c2a4", "#238b45"]
                    },
                    "legend":{"title":"% of Population","orient": "top-right"}
                },
            "tooltip": [
                {"field": "properties.LGA_NAME21", "type": "nominal", "title": "LGA"},
                {"field": "prop_of_pop", "type": "quantitative", "format":".0f","title":"% of Population"}
                ]
            }
        }
    ]
}