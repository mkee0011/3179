{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height":500,
    "width":"container",
    "background":"white",
    "title": {
        "text": {"expr":"'Proportion of ' + language_select + ' Speakers by State in Australia (2021)'"},
        "fontSize":14
    },
    "projection": {"type": "mercator"},
    "data": {
      "url": "https://raw.githubusercontent.com/mkee0011/3179/refs/heads/main/data_vis_2_final/js/state_boundaries.topojson",
      "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA94"}
    },
    "params": [
        {
            "name":"language_select",
            "value":"Mandarin",
            "bind":{
                "input":"select",
                "options":[
                    "Cantonese",
                    "Mandarin",
                    "Arabic",
                    "Hindi",
                    "Punjabi",
                    "Italian",
                    "Greek",
                    "Vietnamese",
                    "Spanish",
                    "Nepali"
                ],
                "labels":[
                    "Cantonese",
                    "Mandarin",
                    "Arabic",
                    "Hindi",
                    "Punjabi",
                    "Italian",
                    "Greek",
                    "Vietnamese",
                    "Spanish",
                    "Nepali"
                ],
                "name": "Language: "
            }
        }
    ],
    "config": {
        "legend": {"orient": "top-right"}
    },
    "transform": [
        {
            "lookup":"properties.STE_NAME21",
            "from":{
                "data":{
                    "url":"https://raw.githubusercontent.com/mkee0011/3179/main/data_vis_2_final/data/top10_bystate.csv"
                },
                "key": "State",
                "fields": [
                    "Cantonese",
                    "Mandarin",
                    "Arabic",
                    "Hindi",
                    "Punjabi",
                    "Italian",
                    "Greek",
                    "Vietnamese",
                    "Spanish",
                    "Nepali"
                ]   
            }
        },
        {"calculate": "datum[language_select] * 100", "as": "language_prop"}
    ],
    "mark":{"type": "geoshape","stroke":"white"},
    "encoding": {
        "color":{
            "field":"language_prop",
            "type": "quantitative",
            "scale":{
                "domain":[0,4],
                "range":["#edf8fb","#238b45"]
            },
            "legend":{"title":"Proportion of Population (%)"}
        },
        "tooltip":[
            {"field":"properties.STE_NAME21","type":"nominal","title":"State"},
            {"field":"language_prop","type":"quantitative","format":".1f","title":"% of Population"}
        ]
    }
}