{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height":400,
    "width":"container",
    "background":"white",
    "title": {
        "text":"Change in the Number of Top 10 Non-English Language Speakers",
        "fontSize":14
    },
    "description": "Slope chart showing the change in the number of speakers for languages per census year",
    "data": {
        "url": "https://raw.githubusercontent.com/mkee0011/3179/main/data_vis_2_final/data/top10_overtime.csv"
    },
    "params": [
        {
            "name":"selected_language",
            "select":{"type":"point","fields":["Language"]},
            "bind":"legend"
        }
    ],
    "mark":{
        "type":"line",
        "point":{"filled":true,"opacity":1.0,"size":80},
        "strokeWidth":2
    },
    "encoding": {
        "x":{
            "field":"year",
            "type": "ordinal",
            "axis":{"title":"Census Year","labelAngle":0, "grid":true,"domainColor":"white"},
            "scale":{"padding":0}
        },
        "y":{
            "field":"speakers",
            "type": "quantitative",
            "axis":{
                "title":"Number of Speakers",
                "grid":false,
                "values":[0,100000,200000,300000,400000,500000,600000,700000]
            }
        },
        "color":{
            "condition": {
                "param": "selected_language",
                "field": "Language",
                "type": "nominal"
            },
            "value": "lightgray"
        }
    },
    "config":{
        "view":{
            "stroke":null
        }
    }
}