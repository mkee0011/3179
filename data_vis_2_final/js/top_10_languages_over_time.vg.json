{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height":400,
    "width":"container",
    "background":"white",
    "title": "Change in the Number of Top 10 Non-English Language Speakers",
    "description": "Slope chart showing the change in the number of speakers for languages per census year",
    "data": {
        "url": "https://raw.githubusercontent.com/mkee0011/3179/main/data_vis_2_final/data/top10_overtime.csv"
    },
    "encoding": {
        "x":{
            "field":"year",
            "type": "ordinal",
            "axis":{"title":"Census Year","labelAngle":0, "grid":true,"domainColor":"white"},
            "scale":{"padding":0}
        },
        "y":{
            "field":"speakers",
            "type": "quantitative",
            "axis":{
                "title":"Number of Speakers",
                "grid":false,
                "values":[0,100000,200000,300000,400000,500000,600000,700000]
            }
        },
        "color":{
            "field":"language",
            "type": "nominal",
            "title": "Language",
            "legend":{"orient":"right"}
        }
    },
    "layer": [
        {
            "mark":{
                "type":"line",
                "strokeWidth":2
            }
        },
        {
            "mark":{
                "type": "point",
                "filled":true,
                "size":80,
                "opacity":1.0
            }
        }
    ],
    "config":{
        "view":{
            "stroke":null
        }
    }
}